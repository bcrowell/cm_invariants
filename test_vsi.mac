/* Hans-Juergen Schmidt,
   "Why do all the curvature invariants of a gravitational wave vanish?" 
   http://arxiv.org/abs/gr-qc/9404037 
*/

load(ctensor);
ct_coords:[u,v,w,q];
depends(a,u);
a:1+(1/2)*cos(u);
lg:matrix([0,1/2,0,0],
          [1/2,0,0,0],
          [0,0,-a^2,0],
          [0,0,0,-1]
          );
load("cm.mac");

cm_print_invariants();
